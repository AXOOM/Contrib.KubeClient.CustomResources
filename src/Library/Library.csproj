<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>Contrib.KubeClient.CustomResources</AssemblyName>
    <RootNamespace>Contrib.KubeClient.CustomResources</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>Library</OutputType>
    <OutputPath>..\..\artifacts\$(Configuration)\</OutputPath>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <IncludeSource>True</IncludeSource>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>
  <PropertyGroup>
    <Authors>AXOOM GmbH</Authors>
    <Copyright>Copyright (c) AXOOM GmbH</Copyright>
    <Description>KubeClient contribution to simplify work with CustomResources</Description>
    <PackageProjectUrl>https://github.com/AXOOM/Contrib.KubeClient.CustomResources</PackageProjectUrl>
    <RepositoryUrl>https://github.com/AXOOM/Contrib.KubeClient.CustomResources</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/AXOOM/Contrib.KubeClient.CustomResources/blob/develop/LICENSE</PackageLicenseUrl>
    <PackageTags>Kubernetes;CustomResources;CRD</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2018.2.1" />
    <PackageReference Include="KubeClient" Version="2.1.6" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="2.1.1" />
    <PackageReference Include="System.Reactive" Version="4.1.1" />
  </ItemGroup>
</Project>
